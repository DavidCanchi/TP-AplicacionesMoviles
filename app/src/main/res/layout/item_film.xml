<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardElevation="5dp"
    app:cardCornerRadius="3dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/filmImage"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/imageDescriptionSupl" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:background="@color/background_secondary"
            android:padding="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/filmTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:fontFamily="@font/msgothic"
                    android:textAllCaps="true"
                    android:textSize="23sp"
                    android:textColor="@color/black"
                    tools:ignore="Deprecated,TextViewEdits"
                    android:inputType="textNoSuggestions"/>
                <TextView
                    android:id="@+id/filmDirector"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="0.5"
                    android:text=""
                    android:textStyle="bold"
                    android:fontFamily="@font/msgothic"
                    android:capitalize="words"
                    android:textSize="20sp"
                    android:textColor="@color/black_light"
                    tools:ignore="Deprecated,TextViewEdits"
                    android:inputType="textNoSuggestions"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:padding="4dp">
                <TextView
                    android:id="@+id/filmReleaseDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:fontFamily="@font/msgothic"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/background_primary"
                    android:adjustViewBounds="true"/>
                <TextView
                    android:id="@+id/filmScore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text=""
                    android:textStyle="bold"
                    android:fontFamily="@font/msgothic"
                    android:textSize="20sp"
                    android:textColor="@color/orange"
                    android:adjustViewBounds="true"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

