<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="start"
    android:gravity="start"
    android:weightSum="1"
    android:padding="3dp"
    android:layout_margin="1dp"
    android:background="@color/white">
    <ImageView
        android:id="@+id/filmImage"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/imageDescriptionSupl" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:background="@color/background_secondary"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/filmTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Castle in the Sky"
                android:textStyle="bold"
                android:fontFamily="@font/msgothic"
                android:textAllCaps="true"
                android:textSize="23sp"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/filmDirector"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="3dp"
                android:layout_weight="0.5"
                android:text="Hayao Miyazaki"
                android:textStyle="bold"
                android:fontFamily="@font/msgothic"
                android:capitalize="words"
                android:textSize="20sp"
                android:textColor="@color/black_light"
                tools:ignore="Deprecated" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:padding="4dp">
            <TextView
                android:id="@+id/filmReleaseDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2004"
                android:fontFamily="@font/msgothic"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/background_primary"
                android:adjustViewBounds="true"/>
            <TextView
                android:id="@+id/filmScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="★ 95 ★"
                android:textStyle="bold"
                android:fontFamily="@font/msgothic"
                android:textSize="20sp"
                android:textColor="@color/orange"
                android:adjustViewBounds="true"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>